{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        // "moduleResolution": "node16",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "jsx",
        "jsxFragmentFactory": "jsx.Fragment" // optional - enables fragments (<></>)
    },
    "include": ["./content-scripts", "js/cse.js"],
    "exclude": ["./node_modules", "./popup"]
}
